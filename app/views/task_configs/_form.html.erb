<div class="container">

  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <% if @task_config.errors.any? %>
        <div class="alert alert-danger alert-dismissable" id="error">
          <strong><%= t "form.error_happened" %></strong>
          <button type="button" class="close" data-dismiss="alert">x</button>

          <ul>
            <% @task_config.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_for(@task_config, html: { class: 'form-horizontal' }) do |f| %>
        <fieldset>
          <legend><%= locals[:legend] %></legend>

          <div class="form-group">
            <%= f.label :name, class: 'control-label col-lg-2' %>
            <div class="col-lg-10">
              <%= f.text_field :name, class: 'form-control', required: true %>
            </div>
          </div>
          
          <div class="form-group">
            <%= f.label :task_type, class: 'control-label col-lg-2' %>
            <div class="col-lg-10">
              <%= f.select :task_type,
                           TaskConfig::AVAILABLE_TASK_TYPE.map.with_index{
                                   |val, i| [ t("task_config.task_type.#{val.to_s}"), i ] },
                           {}, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :model_type %>
          </div>

          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <%= f.submit class: 'btn btn-primary' %>
              <%= link_to t('form.cancel'), :back, class: 'btn btn-default' %>
            </div>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>
