<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= t 'activerecord.attributes.task_config.name' %></th>
      <th colspan="3"><%= t "form.operations" %></th>
    </tr>
  </thead>

  <tbody>
    <% @task_configs.each do |task_config| %>
      <tr>
        <td><%= task_config.name %></td>
        <td><%= link_to t('form.operation.show'), task_config %></td>
        <td><%= link_to t('form.operation.edit'), edit_task_config_path(task_config) %></td>
        <td><%= link_to t('form.operation.destroy'), task_config, method: :delete, data: { confirm: t('form.operation.destroy_confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('form.operation.new'), new_task_config_path, class: 'btn btn-block btn-success' %>
