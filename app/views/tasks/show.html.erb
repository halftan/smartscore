<div class="row">
  <div class="col-lg-8 col-lg-offset-2 jumbotron">
    <p>
      <strong><%= t 'activerecord.attributes.task.id' %>: </strong>
      <span class="badge">
        <%= @task.id %>
      </span>
    </p>

    <p>
      <strong><%= t 'activerecord.attributes.task.status' %>: </strong>
      <%= status_label @task %>
    </p>

    <p>
      <strong><%= t 'activerecord.attributes.task.content' %>: </strong>
      <%= @task.content %>
    </p>

    <p>
      <strong><%= t 'activerecord.attributes.task.task_config_id' %>: </strong>
      <%= link_to_task_config @task %>
    </p>

    <%- if @task.status? :preparing %>
      <%= link_to t('form.operation.edit'), edit_task_path(@task), class: 'btn btn-warning' %>
    <%- end %>
    <%= link_to t('form.back'), tasks_path, class: 'btn btn-default' %>
    <a class="btn btn-primary" href="#collapseLog" data-toggle="collapse" aria-controls="collapseLog">
      <%= t 'form.operation.show_log' %>
    </a>
  </div>
</div>
<div id="collapseLog" class="collapse"><div class="well"><pre></pre></div></div>
<%= javascript_include_tag "task_log" %>
