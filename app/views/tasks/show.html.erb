<div class="container">

  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 jumbotron">
      <p>
        <strong><%= t 'activerecord.attributes.task.id' %>: </strong>
        <span class="badge">
          <%= @task.id %>
        </span>
      </p>

      <p>
        <strong><%= t 'activerecord.attributes.task.status' %>: </strong>
        <span class="label <%= status_label @task %>">
          <%= @task.status %>
        </span>
      </p>

      <p>
        <strong><%= t 'activerecord.attributes.task.content' %>: </strong>
        <%= @task.content %>
      </p>
      <%= link_to t('form.operation.edit'), edit_task_path(@task), class: 'btn btn-warning' %>
      <%= link_to t('form.back'), tasks_path, class: 'btn btn-default' %>
    </div>
  </div>
</div>
